<h1><%= Comment.model_name.human %></h1>
  <%= form_with(model: [commentable, Comment.new]) do |form| %>
    <div class='field'>
      <%= form.label :body %>
      <%= form.text_field :body %>
    </div>
    <div class='actions'>
      <%= form.submit %>
    </div>
  <% end %>
  <% if commentable.comments.size.zero? %>
    <p><%= t('.no_comments') %></p>
  <% else %>
    <% commentable.comments.each do |comment| %>
      <article>
        <p><%= comment.body %></p>
        <footer>
          <p><%= Comment.human_attribute_name(:created_at) %>: <%= l comment.created_at, format: :long %></p>
          <p><%= Comment.human_attribute_name(:user) %>: <%= comment.user.name_email %></p>
          <% if current_user == comment.user %>
            <%= link_to t('views.common.destroy'), comment, method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
          <% end %>
        </footer>
      </article>
    <% end %>
  <% end %>
